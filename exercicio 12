


peso = float(input("Digite o peso: "))
altura = float(input("Digite a altura: "))

imc = peso / (altura**2)

if (imc <= 18.5):
    print(f"O IMC é {imc: .2f} - abaixo do peso")
elif (imc <= 24.9):
    print(f"O IMC é {imc: .2f} - peso ideal")
else:
    print(f"O IMV é {imc: .2f} - Acima do peso")
